{
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "example"],
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "declaration": true,
    "strict": true,
    "target": "ES5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ]
  }
}
