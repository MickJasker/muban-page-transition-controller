{
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "example"],
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
